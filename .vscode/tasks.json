{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "group": "build",
      "command": "C:\\Program Files\\CodeBlocks\\MinGW\\bin\\g++.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Build & run",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "command": "g++ ${fileBasenameNoExtension}.cpp -o bin\\${fileBasenameNoExtension}.exe; .\\bin\\${fileBasenameNoExtension}.exe",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
